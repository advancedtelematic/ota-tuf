[{
  "id": "${JOB_NAME}",
  "uris": ["/root/docker.tar.gz"],
  "constraints": [["rack_id", "CLUSTER", "stateless"]],
  "cpus": $USE_CPU,
  "mem": $USE_MEM,
  "instances": 1,
  "args": ["-main", "com.advancedtelematic.keyserver.Boot"],
  "container": {
      "type": "DOCKER",
      "docker": {
        "image": "${IMAGE_ARTIFACT}",
        "parameters": [{"key": "log-driver", "value": "syslog"}],
        "forcePullImage": true,
        "network": "BRIDGE",
        "portMappings": [{
          "containerPort": 8084,
          "hostPort": 0,
          "protocol": "tcp"
        }]
      }
    },
    "env": {
      "SERVICE_NAME": "${JOB_NAME}",
      "SERVICE_SCOPE": "internal",
      "SERVICE_TYPE": "http",
      "SERVICE_IMAGE": "${IMAGE_ARTIFACT}",
      "SERVICE_HEALTH_CHECK": "curl --show-error --silent %<host>s:%<port>s/health",
      "JAVA_OPTS": "${JAVA_OPTS}"
    },
    "healthChecks": [{
      "protocol": "HTTP",
      "path": "/health",
      "intervalSeconds": 30
    }]
  },
  {
  "id": "${JOB_NAME}-daemon",
  "uris": ["/root/docker.tar.gz"],
  "constraints": [["rack_id", "CLUSTER", "stateless"]],
  "cpus": $USE_CPU,
  "mem": $USE_MEM,
  "instances": 1,
  "args": ["-main", "com.advancedtelematic.keyserver.daemon.KeyGenerationDaemon"],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "${IMAGE_ARTIFACT}",
      "parameters": [{"key": "log-driver", "value": "syslog"}],
      "forcePullImage": true,
      "network": "BRIDGE",
      "portMappings": [{
        "containerPort": 8084,
        "hostPort": 0,
        "protocol": "tcp"
      }]
    }
  },
  "env": {
    "SERVICE_NAME": "${JOB_NAME}-daemon",
    "SERVICE_SCOPE": "internal",
    "SERVICE_TYPE": "http",
    "SERVICE_IMAGE": "${IMAGE_ARTIFACT}",
    "SERVICE_HEALTH_CHECK": "curl --show-error --silent %<host>s:%<port>s/health",
    "JAVA_OPTS": "${JAVA_OPTS}"
  },
  "healthChecks": [{
    "protocol": "HTTP",
    "path": "/health",
    "intervalSeconds": 30
  }]
}]
